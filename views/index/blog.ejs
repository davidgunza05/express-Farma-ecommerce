<%- include('./partials/links')%>
<body class="animsition">
<%- include('./partials/header')%>  
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('assets/images/slide-01.jpg');">
    <h2 class="ltext-105 cl0 txt-center">
        Blog
    </h2>
</section>	

<section class="bg0 p-t-62 p-b-60">
    <div class="container"> 
    <%if(allblog != null){%>
        <div class="row">
            <div class="col-md-8 col-lg-9 p-b-80">
                <div class="p-r-45 p-r-0-lg">
                    <!-- item blog -->
                    <% allblog.forEach(blog => { %>
                    <div class="p-b-63">
                        <a href="/blog/<%=blog._id%>" class="hov-img0 how-pos5-parent">
                            <img src="/img/blogs/<%= blog.imageblog %>" alt="IMG-BLOG">
                            <div class="flex-col-c-m size-123 bg9 how-pos5">
                                <span class="ltext-107 cl2 txt-center">
                                    <%=moment(blog.data).format('D')%>
                                </span>

                                <span class="stext-109 cl3 txt-center">
                                    <%=moment(blog.data).format('MMM YYYY')%>
                                </span>
                            </div>
                        </a>

                        <div class="p-t-32">
                            <h4 class="p-b-15">
                                <a href="/blog/<%=blog._id%>" class="ltext-108 cl2 hov-cl1 trans-04">
                                    <%= blog.titulo %>
                                </a>
                            </h4>

                            <p class="stext-117 cl6">
                                <%= blog.conteudo1%>
                            </p>

                            <div class="flex-w flex-sb-m p-t-18">
                                <span class="flex-w flex-m stext-111 cl2 p-r-30 m-tb-10">
                                    <span>
                                        <span class="cl4">Por</span> Admin  
                                        <span class="cl12 m-l-4 m-r-6">|</span>
                                    </span>

                                    <span>
                                        <%=moment(blog.data).format('LL')%>
                                        <span class="cl12 m-l-4 m-r-6">|</span>
                                    </span>

                                    <span>
                                        <%= blog.category.name%>
                                        <span class="cl12 m-l-4 m-r-6">|</span>
                                    </span>

                                    <span>
                                        <%if(blog.reviews.length == 0 || blog.reviews.length == 1){%>
                                            <%=blog.reviews.length%> Comentário
                                        <%}else{%>
                                            <%=blog.reviews.length%> Comentários
                                        <%}%>
                                    </span>
                                </span>

                                <a href="/blog/<%=blog._id%>" class="stext-101 cl2 hov-cl1 trans-04 m-tb-10">
                                    LER MAIS

                                    <i class="fa fa-long-arrow-right m-l-9"></i>
                                </a>
                            </div>
                        </div>
                    </div> 
                    <% }); %>
                    <!-- Pagination -->
                    <div class="flex-l-m flex-w w-full p-t-10 m-lr--7">
                        <a href="#" class="flex-c-m how-pagination1 trans-04 m-all-7 active-pagination1">
                            1
                        </a>

                        <a href="#" class="flex-c-m how-pagination1 trans-04 m-all-7">
                            2
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-3 p-b-80">
                <div class="side-menu"> 
                    <div>
                        <h4 class="mtext-112 cl2 p-b-33">
                            Postagens Antigas
                        </h4>

                        <ul>
                            <% litleblog.forEach(blog => { %>
                                <li class="flex-w flex-t p-b-30">
                                    <a href="/blog/<%=blog._id%>" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">
                                        <img src="/img/blogs/<%= blog.imageblog %>" alt="PRODUCT" width="90px" height="60px">
                                    </a>
    
                                    <div class="size-215 flex-col-t">
                                        <a href="/blog/<%=blog._id%>" class="stext-116 cl8 hov-cl1 trans-04">
                                            <%=blog.titulo%>
                                        </a> 
                                    </div>
                                </li>
                            <%})%>
                        </ul>
                    </div> 
                </div>
            </div>
        </div>
    <%}%>
    </div>
</section>	
<%- include('./partials/footer')%>

</body>
</html>  