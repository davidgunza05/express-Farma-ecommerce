<%- include('./partials/links')%>
<body class="animsition">
<%- include('./partials/header')%>  

<div class="container pt-3">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>  

	  <a href="/products" class="stext-109 cl8 hov-cl1 trans-04">
      Produtos
		<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
	  </a> 

    <span class="stext-109 cl4"> 
      <%=productDetails.name%>
    </span>
  </div>
</div>
<%- include('./partials/msg')%>  

<% if(productDetails != null){%>
<section class="bg0 pb-5">
  <div class="container">
    <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent"> 
      <div class="row">
        <div class="col-md-6 col-lg-7 p-b-30">
          <div class="p-l-25 p-r-30 p-lr-0-lg">
            <%if(productDetails.stock == 0){%>
              <div class="alert alert-danger">Não é possível comprar ou adicionar este produto. Não existe quantidade suficiente em estoque</div>  
            <%}%>
            <div class="wrap-slick3 flex-sb flex-w">
              <div class="wrap-slick3-dots"></div>
              <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

              <div class="slick3 gallery-lb <%if(productDetails.stock == 0){%>label1" data-label="Esgotado<%}%>">
                <div class="item-slick3" data-thumb="/img/products/<%=productDetails.images[0]%>">
                  <div class="wrap-pic-w pos-relative">
                    <img src="/img/products/<%=productDetails.images[0]%>" alt="IMG-PRODUCT" class="img-responsive">

                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/img/products/<%=productDetails.images[0]%>">
                      <i class="fa fa-expand"></i>
                    </a>
                  </div>
                </div>

                <div class="item-slick3" data-thumb="/img/products/<%=productDetails.images[1]%>">
                  <div class="wrap-pic-w pos-relative">
                    <img src="/img/products/<%=productDetails.images[1]%>" alt="IMG-PRODUCT" class="img-responsive">

                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/img/products/<%=productDetails.images[1]%>">
                      <i class="fa fa-expand"></i>
                    </a>
                  </div>
                </div>

                <div class="item-slick3" data-thumb="/img/products/<%=productDetails.images[2]%>">
                  <div class="wrap-pic-w pos-relative">
                    <img src="/img/products/<%=productDetails.images[2]%>" alt="IMG-PRODUCT" class="img-responsive">

                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/img/products/<%=productDetails.images[2]%>">
                      <i class="fa fa-expand"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-6 col-lg-5 p-b-30">
          <div class="p-r-50 p-t-5 p-lr-0-lg">
            <div class="content-topbar flex-sb-m h-full">
              <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                <%=productDetails.name%>
              </h4>
            <%if(productDetails.stock == 0){%>
            <%}else{%>
              <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail" onclick="addToWishlist('<%=productDetails._id%>')">
              </a>
            <%}%>
            </div>

            <span class="mtext-106 cl2">
            <%=productDetails.price%> AKZ
            </span>

            <p class="stext-102 cl3 p-t-23 text-justify">
              <%=productDetails.descricao%>
            </p>

            <p class="stext-102 cl3 p-t-23 text-justify">
            <strong>Categoria: </strong><%=productDetails.category.name%>
            </p>

            <p class="stext-102 cl3 p-t-23 text-justify">
              <strong>Fabricante: </strong><%=productDetails.fabricante%>
            </p>

            <p class="stext-102 cl3 p-t-23 text-justify">
              <strong>Dosagem: </strong><%=productDetails.dosagem%>
            </p>

            <p class="stext-102 cl3 p-t-23 text-justify">
              <strong>Data de expiração: </strong>
              
              <%if(productDetails.expiryDate <= Date.now()){%>
                <span class="text-danger"> <b>Indisponível</b></span>
              <%}else{%>
                <%=moment(productDetails.expiryDate).format('L')%>
              <%}%>
    
            </p>

            <p class="stext-102 cl3 p-t-23 text-justify">
              <strong>Quantidade: </strong><%=productDetails.composicao%>
            </p>             

            <p class="stext-102 cl3 p-t-23 text-justify">
              <strong>Efeitos colaterais: </strong><%=productDetails.efeitos_colaterais%>
            </p>
            <%if(productDetails.expiryDate <= Date.now()){%>
              <div class="alert alert-danger mt-4">Este produto não está disponível para compras</div>
            <%}else{%>
              <%if(productDetails.stock == 0){%>
                <div class="alert alert-danger mt-4">Este produto não está disponível para compras</div>
              <%}else{%>
                <div class=" pt-5">  
                  <button class="stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" onclick="addToCart('<%=productDetails._id%>')">
                    Adicionar ao carrinho
                  </button>
                  <button class="stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04" onclick="buyNow('<%=productDetails._id%>')">
                    Comprar agora
                  </button>
                </div>  
              <%}%>
            <%}%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
<%}%>

<section class="bg0 pb-5 mb-5">
  <div class="container">
    <div class="bor10 m-t-50 p-t-43 p-b-40">
      <!-- Tab01 -->
      <div class="tab01">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item p-b-10">
            <a class="nav-link">Comentários (<%=productDetails.reviews.length%>)</a>
          </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content"> 
          <!-- - -->
            <div class="row">
              <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                <div class="p-b-30 m-lr-15-sm">
                <% if (productDetails.reviews.length != null) { %>   
                  <% productDetails.reviews.forEach(review => { %>
                  <div class="flex-w flex-t p-b-50">
                    <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                      <img src="/img/users/default_userPhoto.jpg" alt="AVATAR">
                    </div>
                    <div class="size-207">
                      <div class="flex-w flex-sb-m p-b-17">
                        <span class="mtext-107 cl2 p-r-20">
                          <%= review.user %>
                        </span>
                        <span class="fs-18 cl11">
                        <% for (let i = 1; i <= 5; i++) { %>
                          <% if (i <= review.rating) { %>
                            <i class="zmdi zmdi-star"></i>
                          <% } else { %>
                            <i class="zmdi zmdi-star-outline"></i>
                          <% } %> 
                        <% } %>
                        </span> 
                      </div>
                      <p class="stext-102 cl6">
                        <%= review.comment %>
                      </p>
                    </div>
                  </div>
                  <% })%>                  
                <% }else{%>
                  <p class="text-danger">Nenhuma avaliação feita, seja o primeiro a avaliar este produto</p>
                <%}%>
                <% if(currentUser!=null){%>
                <form class="w-full" method="post" action="/users/avaliar/<%= productDetails._id %>">  
                  <div class="flex-w flex-m p-t-50 p-b-23">
                    <span class="stext-102 cl3 m-r-16">
                        Tua estrela
                    </span>


                    <span class="wrap-rating fs-18 cl11 pointer" >
                      <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                      <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                      <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                      <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                      <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                      <input class="dis-none" type="number" name="rating" id="rating" required>
                    </span>
                  </div>

                  <div class="row p-b-25">
                    <div class="col-12 p-b-5">
                      <label class="stext-102 cl3" for="review">Tua avaliação</label>
                      <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" name="comment" id="comment" required></textarea>
                      <input type="text" name="user" id="user" value="<%=currentUser.name%>" class="d-none">
                      <input type="text" name="email" id="email" value="<%=currentUser.email%>" class="d-none">
                    </div> 
                  </div>

                  <button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10 js-addwish-detail" type="submit">
                    Postar
                  </button>
                </form>
                <%}%>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="sec-relate-product bg0 pt-5 p-b-105">
  <div class="container">
    <div class="p-b-45">
      <h3 class="ltext-106 cl5 txt-center">
        Produtos relacionados
      </h3>
    </div>

    <!-- Slide2 -->
    <div class="wrap-slick2">
      <div class="slick2">
      <%if(relatedProducts != null){%>
      <% relatedProducts.forEach(function(product) { %>
        <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
          <!-- Block2 -->
          <div class="block2 <%if(product.stock == 0){%>label1" data-label="Esgotado<%}%>">
            <div class="block2-pic hov-img0">
              <img src="/img/products/<%=product.thumbnail%>" alt="IMG-PRODUCT" class="img-responsive">
  
              <a href="/products/<%=product._id%>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                Visualizar
              </a>
            </div>
            <style>                     
            </style>
  
            <div class="block2-txt flex-w flex-t p-t-14">
              <div class="block2-txt-child1 flex-col-l ">
                <a href="/products/<%=product._id%>" class="stext-105 cl3 hov-cl1 trans-04 js-name-b2">
                 <%=product.name%>
                </a>
                <span class="stext-107 cl4">
                 Avaliações (<%=product.reviews.length%>)
                </span> 
              </div> 
            </div>
            <div class="block2-txt d-flex flex-t padding-product">
              <div class="block2-txt-child1 flex-col-l ">
                <span class="stext-kz cl3">
                  <%=product.price%> AKZ
                </span>
  
              </div>
              <div class="block2-txt-child2 flex-r" style="width: 100%;"> 
                <span class="dis-block pos-relative">
                  <%=product.composicao%>
                </span>
              </div>
            </div>
          </div>
        </div>  
      <% }) %>   
      <%}else{%>
        ss
      <%}%>     
      </div>
    </div>
  </div>
</section>
<%- include('./partials/footer')%>
<script src="/js/singleProduct.js"></script> 
 
</body>
</html> 