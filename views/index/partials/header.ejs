<header class="header-v2">
    <!-- Header desktop -->
    <div class="container-menu-desktop trans-03">
        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop" style="padding-left: 10rem;">
                
                <!-- Logo desktop -->		
                <a href="/" class="logo">
                    <img src="/assets/images/icons/logo-01.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li>
                            <a href="/">Página principal</a>
                        </li>

                        <li>
                            <a href="/products">Todos produtos</a>
                        </li>

                        <li>
                            <a href="/blog">Blog</a>
                        </li>

                        <% if(details !=null) { %>
                        <li>
                            <a href="#">Categorias</a>
                            <ul class="sub-menu">
                                <% details.forEach(function(item,i){ %>
                                    <li><a href="/categoria/<%=item._id%>"><%=item.name%></a></li>
                                <% }) %>
                            </ul>
                        </li>
                        <% } %>
 
                        <li>
                            <a href="/sobre">Sobre</a>
                        </li>

                    </ul>
                </div>	

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m h-full">
                    <div class="flex-c-m h-full p-r-24">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
                            <i class="zmdi zmdi-search"></i>
                        </div>
                    </div>  
                    <div class="flex-c-m h-full p-l-18 p-r-25 bor5">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11">
                            <a href="/users/cart" class="text-dark"><i class="zmdi zmdi-shopping-cart"></i></a>
                        </div>
                    </div> 
                    <% if(locals.session){%>  
                    <div class="flex-c-m h-full p-lr-19">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
                            <i class="zmdi zmdi-account"></i>
                        </div>
                    </div>                         
                    <%}else {%>
                    <div class="flex-c-m h-full p-lr-19">
                        <div class="icon-header-item stext-102 cl2 hov-cl1 trans-04 p-lr-11">
                            <a href="/users/signIn">Login</a>
                        </div>
                    </div>   
                    <%}%>
                </div>
            </nav>
        </div>	
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->		
        <div class="logo-mobile">
            <a href="/"><img src="/assets/images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
            <div class="flex-c-m h-full p-r-10">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
                    <i class="zmdi zmdi-search"></i>
                </div>
            </div>

            <div class="flex-c-m h-full p-lr-10 bor5">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11"">
                    <a href="/users/wishlist" class="text-dark"><i class="zmdi zmdi-favorite-outline"></i></a>
                </div>
            </div>

            <div class="flex-c-m h-full p-lr-10 bor5">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-cart"">
                    <a href="/users/cart" class="text-dark"><i class="zmdi zmdi-shopping-cart"></i></a>
                </div>
            </div>

            <div class="flex-c-m h-full p-lr-10 bor5">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
                    <i class="zmdi zmdi-account"></i>
                </div>
            </div>
        </div>
        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="main-menu-m">

            <li>
                <a href="/">Página principal</a>
            </li>

            <li>
                <a href="/products">Todos Produtos</a>
            </li>
             
            <% if(details !=null) { %>
            <li>
                <a href="#">Categorias</a>
                <ul class="sub-menu-m">
                    <% details.forEach(function(item,i){ %>
                        <li><a href="/categoria/<%=item._id%>"><%=item.name%></a></li>
                    <% }) %>
                </ul>
                <span class="arrow-main-menu-m">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
            </li>
            <% } %>
 
            <li>
                <a href="/blog">Blog</a>
            </li>

            <li>
                <a href="/sobre">Sobre</a>
            </li>

        </ul>
    </div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="/assets/images/icons/icon-close2.png" alt="CLOSE">
            </button>

            <form action="/pesquisar" method="get" class="wrap-search-header flex-w p-l-15">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="q" placeholder="Nome, fabricante ou quantidade">
            </form>
        </div>
    </div>
</header>


<aside class="wrap-sidebar js-sidebar">
    <div class="s-full js-hide-sidebar"></div>

    <div class="sidebar flex-col-l p-t-22 p-b-25">
        
        <div class="flex-r w-full p-b-30 p-r-27">
            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-sidebar">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>

        <div class="flex-w w-full p-lr-65 js-pscroll">
            <ul class="sidebar-link w-full">
                <li class="p-b-13">
                    <a href="/users/profile" class="stext-102 cl2 hov-cl1 trans-04">
                        Meu Perfil
                    </a>
                </li>

                <li class="p-b-13">
                    <a href="/users/orders" class="stext-102 cl2 hov-cl1 trans-04">
                        Minhas compras
                    </a>
                </li>

                <li class="p-b-13">
                    <a href="/users/addresses" class="stext-102 cl2 hov-cl1 trans-04">
                        Meu endereço
                    </a>
                </li>

                <li class="p-b-13">
                    <a href="/contacto" class="stext-102 cl2 hov-cl1 trans-04">
                        Contactar adminstrador
                    </a>
                </li>

                <li>
                    <a href="/users/signOut" class="stext-102 cl2 hov-cl1 trans-04">
                        Terminar sessão
                    </a>
                </li>
            </ul>
            <div class="sidebar-gallery w-full">
            </div>
        </div>
    </div>
</aside> 