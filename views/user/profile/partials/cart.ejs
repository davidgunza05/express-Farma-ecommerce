<%- include('../layouts/links')%>
<body class="animsition">
<%- include('../layouts/header')%>  
<div class="container">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/products" class="stext-109 cl8 hov-cl1 trans-04">
      Produtos
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>
    <span class="stext-109 cl4">
      Meu carrinho
    </span>
  </div>
</div>

	<!-- Shoping Cart -->
	<section class="bg0 p-t-75 p-b-85">
		<div class="container">
		  <%- include('./msg') %>
      <% if(userCart!= null && userCart.products.length!= 0){%> 
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart" id="cart">
								<tr class="table_head">
									<th class="column-1">Produto</th>
									<th class="column-2"></th>
									<th class="column-3">Preço</th>
									<th class="column-4">Quantidade</th>
									<th class="column-3"></th>
								</tr>
                <%userCart.products.forEach((product,i) => {%>
								<tr class="table_row" >
									<td class="column-1">
										<div class="how-itemcart1">
											<img src="/img/products/<%=product.name.thumbnail%>" alt="imagem do carrinho">
										</div>
									</td>
									<td class="column-2"><%=product.name.name%></td>
									<td class="column-3"><%=product.name.price%> AKZ</td>
									<td class="column-4"> 
                      <button class="btn btn-sm btn-light button-div" onclick='reduceCount("<%=product.name._id%>","<%=i%>")'>
                        <i class="fa fa-minus"></i>
                      </button>
                      <span id="cartCount<%=i%>" class="fw-bold px-2"><%=product.quantity%></span>
                      <button class="btn btn-sm btn-light button-div" onclick='addCount("<%=product.name._id%>","<%=i%>")'>
                        <i class="fa fa-plus h-100"></i>
                      </button> 
									</td>
									<td class="column-4 pr-5">
                    <button class="btn button-div btn-sm text-white btn-danger">
                      <span style="font-size: 0.8rem; letter-spacing: 1px" onclick="removeFromCart('<%=product.name._id%>')" ><i class="zmdi zmdi-delete"></i></span>
                    </button>
                  </td>
								</tr> 
                <%})%>

							</table>
						</div> 
					</div>
				</div>

				<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
					<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
						<h4 class="mtext-109 cl2 p-b-30">
							Total do carrinho
						</h4>

						<div class="flex-w flex-t bor12 p-b-13">   
						</div>

						<div class="flex-w flex-t bor12 p-t-15 p-b-30">
							<div class="w-full-ssm">
								<span class="stext-110 cl2">
									Entrega:
								</span>
							</div>

							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
								<p class="stext-111 cl6 p-t-2">
									A entrega do poduto requer uma taxa entrega
								</p>
							</div>
						</div>

            <div class="order-summary">
              <div class="flex-w flex-t pt-4">
                <div style="width: 60%;">
                  <span class="mtext-101 cl2">
                    Itens total:
                  </span>
                </div>
  
                <div style="width: 34.5%;" class="p-t-1">
                  <span id="totalItems" class="mtext-110 cl2">
                    <%=userCart.totalQuantity%> 
                  </span>
                </div>
              </div>
  
              <div class="flex-w flex-t pt-2">
                <div style="width: 60%;">
                  <span class="mtext-101 cl2">
                    Produtos total:
                  </span>
                </div>
  
                <div style="width: 34.5%;" class="p-t-1">
                  <span id="totalProducts" class="mtext-110 cl2">
                    <%=userCart.products.length%>
                  </span>
                </div>
              </div>
              
              <div class="flex-w flex-t pt-2 pb-5">
                <div style="width: 60%;">
                  <span class="mtext-101 cl2">
                    Preço total:
                  </span>
                </div>
  
                <div style="width: 34.5%;" class="p-t-1">
                  <span id="totalPrice" class="mtext-110 cl2">
                    <%=userCart.totalPrice%> AKZ  
                  </span>
                </div>
              </div>
            </div>

            <a href="/users/cart/checkout" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" type="submit">
              <button class="text-white">
              Comprar
						</button>
            </a>
					</div>
				</div>
			</div>
      <%} else {%>
        <div class="pb-5 pt-5 justify-content-center text-center m-4">
          <h2 class="text-danger">Não há nenhum produto adicionado no teu carrinho de compras</h2>
      </div>
      <%}%>
		</div>
	</section>

<%- include('../layouts/footer')%>
<script src="/js/user/cart.js"></script>
<script src="/online/sweetalert2@11.js"></script>
</body>
</html> 