 <%- include('../layouts/styles') %>
<body>  
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <%- include('../layouts/sidebar') %>
    <div class="layout-page"> 
      <div class="content-wrapper">
        <!-- Content -->
        <%- include('../layouts/navbar') %>
        <div class="container-xxl flex-grow-1 container-p-y"> 
        <%- include('../layouts/msg') %>

          <div class="row">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title pb-2">Todos emails</h4>
                  <div class="table-responsive">

                     <% if(details !=null){ %>
                      <table class="table table table-bordered" id="dataTable">
                        <thead>
                          <tr style="background: #e3e3e3;">
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Data</th>
                            <th></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% details.forEach(function(item,i){ %>
                            <tr>
                              <td><%= item.name %></td>
                              <td><%= item.email %></td>
                              <td><%=moment(item.date).format('LLL')%></td>
                              <td class="text-center">
                                <button class="btn btn-sm btn-info "><a href="/admin/mail_managements/<%= item._id %>" class="text-white decoration-none">Ver</a></button>
                                <button class="btn btn-sm btn-danger text-white">
                                  <a href="/admin/mail/delete_email?id=<%= item._id%>" onclick="return confirm('Pretende eliminar email de <%= item.name %> ?')" class="text-white decoration-none">deletar</a>
                                </button>
                              </td>
                            </tr>  
                          <% }) %>
                          </tbody>
                      </table>
                    <%}%>   
                  </div>
                </div>
              </div>
            </div>
          </div> 
        
        </div> 
        
        <div class="content-backdrop fade"></div>
      </div>
      <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
  </div>  
  <!-- Overlay -->
  <div class="layout-overlay layout-menu-toggle"></div>
</div> 
<script src="/js/admin/admin.js"></script> 
<%- include('../layouts/script') %>
</body>
</html>  
