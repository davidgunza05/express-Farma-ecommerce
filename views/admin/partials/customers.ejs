<%- include('../layouts/styles') %>
<body>  
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <%- include('../layouts/sidebar') %>
    <div class="layout-page"> 
      <div class="content-wrapper">
        <!-- Content -->
        <%- include('../layouts/navbar') %>
        <div class="container-xxl flex-grow-1 container-p-y"> 
        <%- include('../layouts/msg') %> 
          <div class="row">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title pb-2">Todos clientes</h4>
                  <div class="table-responsive">

                <% if(allCustomers !=null) { %>                   
                      <table class="table table table-bordered" id="dataTable">
                        <thead>
                          <tr style="background: #e3e3e3;">
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Contacto</th>
                            <th style="width: 20%">Acesso</th>
                          </tr>
                        </thead>

                        <tbody id="tableBody" style="font-size: 0.85rem;">
                          
                      <% allCustomers.forEach(function(item,i){ %>
                        <tr>
                          <td><%= item.name %></td>
                          <td><%= item.email %></td>
                          <td><%= item.number %></td>
                          <td class="text-center">
                            <div id="<%=item._id%>">
                              <a href="/admin/customer_management/delete_customer?id=<%= item._id%>" onclick="return confirm('Pretende eliminar <%= item.name %> ?')" class="btn btn-danger text-white btn-sm "><i class="bx bxs-trash" title="Eliminar"></i></a>
                              <button class="btn btn-sm btn-dark" onclick="changeAccess('<%=item._id%>','<%=item.access%>')">
                              <% if (item.access == true) {%>
                              <i  class="mdi mdi-lock-open text-white" aria-hidden="true"></i><span class="text-info">Permitido</span>
                              <%}else{%>
                              <i class="mdi mdi-lock" aria-hidden="true"></i><span class="text-danger">Bloqueado</span> <%} %>
                            </button>
                            </div>
                          </td>
                        </tr>
                          <%})%>
                        </tbody>
                      </table>
                    <%}%>   
                  </div>
                </div>
              </div>
            </div>
          </div> 
        
        </div> 
        
        <div class="content-backdrop fade"></div>
      </div>
      <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
  </div>
        
  <!-- Overlay -->
  <div class="layout-overlay layout-menu-toggle"></div>
</div> 
<script src="/js/admin/admin.js"></script> 
<%- include('../layouts/script') %>
</body>
</html>  