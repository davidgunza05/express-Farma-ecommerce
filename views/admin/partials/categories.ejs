<%- include('../layouts/styles') %>
<body>  
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <%- include('../layouts/sidebar') %>
    <div class="layout-page"> 
      <div class="content-wrapper">
        <!-- Content -->
        <%- include('../layouts/navbar') %>
        <div class="container-xxl flex-grow-1 container-p-y">
          <div class="page-header">
            <h3 class="page-title"> 
              <button type="button" class="btn btn-dark text-center" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Adicionar categoria
              </button>
            </h3> 
          </div>  
        <%- include('../layouts/msg') %>
        <%if(locals.errorMessage) {%>
          <p class="alert-danger alert text-center"><%= locals.errorMessage %></p>
        <%}%>

          <div class="row">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title pb-2">Todas categorias</h4>
                  <div class="table-responsive">

                <% if(details !=null) { %>                   
                      <table class="table table table-bordered" id="dataTable">
                        <thead>
                          <tr style="background: #e3e3e3;">
                            <th>Nº</th>
                            <th>Nome</th>
                            <th style="width: 20%">Ação</th>
                          </tr>
                        </thead>

                        <tbody id="tableBody" style="font-size: 0.85rem;">
                          
                        <% details.forEach(function(item,i){ %>
                          <tr>
                            <td><%= i+1 %></td>
                            <td><%= item.name %></td>
                            <td class="text-center">
                              <div class="text-center">
                                <a href="/admin/categories/edit?id=<%= item._id%>" onclick="return confirm('Pretende Editar categoria <%= item.name %>?')"class="btn btn-info text-white btn-sm "><i class="bx bx-edit-alt me-1" title="Editar"></i></a>
                                <a href="/admin/categories/delete_category?id=<%= item._id%>"onclick="return confirm('Pretende deletar categoria <%= item.name %>?')" class="btn btn-danger text-white btn-sm "><i class="bx bxs-trash" title="Eliminar"></i></a>
                              </div>
                            </td>
                          </tr>
                          <%})%>
                        </tbody>
                      </table>
                    <%}%>   
                  </div>
                </div>
              </div>
            </div>
          </div> 
        
        </div> 
        
        <div class="content-backdrop fade"></div>
      </div>
      <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
      <div class="modal-content" style="background: #fff;">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">
              Nova categoria
          </h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body"> 
                <form action="" method="post">
                  <div class="mb-3">
                    <input type="string" class="form-control" id="form-holder" placeholder="Inserir nome da categoria" name="category" style="text-transform: none"/>
                  </div>
                  <input type="submit" class="btn btn-dark w-100" value="Adiciona Categoria" />
                </form>
        </div> 
    </div>
    </div>
  </div>
        
  <!-- Overlay -->
  <div class="layout-overlay layout-menu-toggle"></div>
</div> 
<script src="/js/admin/admin.js"></script> 
<%- include('../layouts/script') %>
</body>
</html>  